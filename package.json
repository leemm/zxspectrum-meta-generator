{
    "name": "zxspectrum-frontend-meta-generator",
    "version": "0.5.0",
    "description": "ZXSpectrum Game Frontend Config Generator using ZXInfo API",
    "exports": "./dist/start.js",
    "type": "module",
    "scripts": {
        "start": "node --no-warnings --loader ts-node/esm ./src/start.ts",
        "build": "npm run cleanup && npx tsc -p ./tsconfig.build.json && npx rollup --config rollup.config.js",
        "package": "npm run build && npx pkg ./dist/bundle.js -o ./dist/zxgenerator",
        "install-package": "sudo cp ./dist/zxgenerator /usr/local/bin && sudo chmod +x /usr/local/bin/zxgenerator",
        "cleanup": "rm -rf ./dist && sudo rm -f /usr/local/bin/zxgenerator",
        "test": "echo \"Error: no test specified\" && exit 1"
    },
    "keywords": [
        "spectrum",
        "zx",
        "zxinfo",
        "api",
        "pegasus",
        "pegasus-frontend"
    ],
    "engines": {
        "node": ">=16.0.0"
    },
    "author": "Lee McCormick (leemmccormick@gmail.com)",
    "license": "ISC",
    "devDependencies": {
        "@rollup/plugin-commonjs": "^21.0.2",
        "@rollup/plugin-node-resolve": "^13.1.3",
        "@rollup/plugin-typescript": "^8.3.1",
        "@types/cli-progress": "^3.9.2",
        "@types/command-line-args": "^5.2.0",
        "@types/command-line-usage": "^5.0.2",
        "@types/md5": "^2.3.2",
        "@types/mime-types": "^2.1.1",
        "@types/promptly": "^3.0.2",
        "@types/shelljs": "^0.8.11",
        "@typescript-eslint/parser": "^5.11.0",
        "appdata-path": "^1.0.0",
        "axios": "^0.25.0",
        "boxen": "5.1.2",
        "caxa": "^2.1.0",
        "chalk": "4.1.0",
        "cli-progress": "^3.10.0",
        "command-line-args": "^5.2.1",
        "command-line-usage": "^6.1.1",
        "del": "^6.0.0",
        "eslint": "^8.9.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^4.0.0",
        "get-all-files": "^4.1.0",
        "image-size": "^1.0.1",
        "js-ini": "^1.5.1",
        "logging": "^3.3.0",
        "md5": "^2.3.0",
        "mime-types": "^2.1.34",
        "nanoid": "^3.3.1",
        "open": "^8.4.0",
        "pkg": "^5.5.2",
        "promptly": "^3.2.0",
        "rollup": "^2.70.0",
        "rollup-plugin-node-builtins": "^2.1.2",
        "rollup-plugin-node-globals": "^1.4.0",
        "rollup-plugin-node-resolve": "^5.2.0",
        "shelljs": "^0.8.5",
        "terminal-image": "^2.0.0",
        "ts-node": "^10.5.0",
        "typescript": "^4.5.5",
        "wikipedia": "^1.1.7"
    }
}
